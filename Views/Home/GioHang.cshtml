@using BaiTapLonWeb.Models
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2 style="text-align:center">Lịch sử đặt vé</h2>
<table align="center" border="1">
    <tr style="text-align:center;font-weight:bold">
        <td>Mã phim</td>
        <td>Tên phim</td>
        <td>Ảnh bìa</td>
        <td>Số vé</td>
        <td>Giá</td>
        <td>Thành tiền</td>
        <td></td>
        <td></td>
    </tr> 
    @foreach(var item in Model)
    {
        <tr style="text-align:center;font-weight:bold">
            <td>@item.MaPhim</td>
            <td>@item.TenPhim</td>
            <td><img src="~/Content/HinhAnh/@item.AnhBia" style="width:150px;height:200px" /></td>
            <td>@item.SoLuong</td>
            <td>@String.Format("{0:0,0}",item.Gia)</td>
            <td>@String.Format("{0:0,0}", item.ThanhTien)</td>
            <td><a href="@Url.Action("MovieDetail", "Home", new { id=item.MaPhim})">Chi tiết</a></td>
            <td>@Html.ActionLink("Hủy", "XoaGioHang", new { @MaSp =item.MaPhim})</td>
        </tr>
    }
    <tr style="font-weight:bold;text-align:right;color:red">
        <td colspan="3">Số lượng phim: @ViewBag.tongsoluong</td>
        <td colspan="3">Số tiền: @String.Format("{0:0,0}",ViewBag.tongtien) VND</td>
    </tr>
    <tr style="font-weight:bold;color:blue;text-align:right">
        <td colspan="9">
            @Html.ActionLink("Hủy tất cả vé","XoaTatCa")
        </td>

    </tr>
</table>

